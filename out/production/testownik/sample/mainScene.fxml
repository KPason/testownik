<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainWindowBorderPane" stylesheets="@../style/style1.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.MainController">
    <top>
        <MenuBar>
            <Menu fx:id="mainMenu" text="Game">
                <MenuItem fx:id="menuStartButton" onAction="#startTheGame" text="Start"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="menuRestartButton" onAction="#restartTheGame" text="Restart"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit"/>
            </Menu>

            <Menu text="Questions">
                <MenuItem onAction="#showEditingQuestionsDialog" text="Edit questions"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox spacing="40">
            <padding>
                <Insets top="80"/>
            </padding>
            <VBox alignment="TOP_CENTER" spacing=" 15">

                <padding>
                    <Insets bottom="10" top="10"/>
                </padding>

                <Label fx:id="questionLabel" alignment="CENTER" styleClass="question-label" prefWidth="400" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Verdana" size="20"/>
                    </font>
                </Label>

                <fx:define>
                    <ToggleGroup fx:id="questionsToggleGroup"/>
                </fx:define>

            </VBox>


            <VBox spacing="10">


                <padding>
                    <Insets left="100"/>
                </padding>

                <RadioButton fx:id="firstQuestionButton" styleClass="radio-buttons" wrapText="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="answerToggleGroup"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="secondQuestionButton" styleClass="radio-buttons" toggleGroup="$answerToggleGroup"
                             wrapText="true"/>
                <RadioButton fx:id="thirdQuestionButton" styleClass="radio-buttons" toggleGroup="$answerToggleGroup"
                             wrapText="true"/>
                <RadioButton fx:id="fourthQuestionButton" styleClass="radio-buttons" toggleGroup="$answerToggleGroup"
                             wrapText="true"/>
            </VBox>

            <VBox alignment="BOTTOM_RIGHT">
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="checkingButton" onMouseClicked="#checkingTheAnswer" prefWidth="100"
                            styleClass="next-buttons" text="check answer"/>
                    <Button fx:id="nextQuestionButton" onMouseClicked="#goToTheNextQuestion" prefWidth="100"
                            styleClass="next-buttons" text="go to next"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <VBox>

            <HBox alignment="CENTER">
                <Label fx:id="resultLabel">
                    <padding>
                        <Insets bottom="30"/>
                    </padding>
                    <font>
                        <Font name="Verdana" size="30"/>
                    </font>
                </Label>
            </HBox>
            <HBox alignment="BOTTOM_LEFT">
                <Label fx:id="answeredQuestionsCounterLabel" alignment="BOTTOM_LEFT">
                    <padding>
                        <Insets bottom="20" left="30"/>
                    </padding>
                    <font>
                        <Font size="10"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </bottom>
    <left>
    </left>
    <right>
    </right>


</BorderPane>
