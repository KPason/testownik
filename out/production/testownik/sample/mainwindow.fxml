<BorderPane fx:id="mainWindowBorderPane" fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: white">


    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Add new question" onAction="#showAddingNewQuestionDialog"/>
                <SeparatorMenuItem/>
                <MenuItem text="Remove question" onAction="#showRemovingQuestionDialog"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit"/>
            </Menu>

            <Menu text="sthg else">
                <MenuItem />
            </Menu>
        </MenuBar>

        <!--        <HBox alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 2;">-->
        <!--            <Label text="This is a test game you can play to become a true java programmer" textFill="#663399">-->
        <!--                <font>-->
        <!--                    <Font name="Verdana" size="15"/>-->
        <!--                </font>-->
        <!--            </Label>-->
        <!--        </HBox>-->
    </top>

    <center>
        <VBox  spacing="40">
            <padding>
                <Insets top="80"/>
            </padding>
            <VBox alignment="TOP_CENTER"  spacing=" 15">

                <padding>
                    <Insets top="10" bottom="10"/>
                </padding>

                <Label fx:id="questionLabel" alignment="CENTER" textAlignment="CENTER" wrapText="true"
                       textFill="#663399" prefWidth="400">
                    <font>
                        <Font name="Verdana" size="20"/>
                    </font>
                </Label>

                <fx:define>
                    <ToggleGroup fx:id="questionsToggleGroup"/>
                </fx:define>

            </VBox>


            <VBox  spacing="10">

                <fx:define>
                    <ToggleGroup fx:id="answerToggleGroup"/>
                </fx:define>
                <padding>
                    <Insets left="100"/>
                </padding>

                <RadioButton fx:id="firstQuestionButton" toggleGroup="$answerToggleGroup" wrapText="true"/>
                <RadioButton fx:id="secondQuestionButton" toggleGroup="$answerToggleGroup" wrapText="true"/>
                <RadioButton fx:id="thirdQuestionButton" toggleGroup="$answerToggleGroup" wrapText="true"/>
                <RadioButton fx:id="fourthQuestionButton" toggleGroup="$answerToggleGroup" wrapText="true"/>
            </VBox>

            <VBox alignment="BOTTOM_RIGHT">
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="checkingButton" prefWidth="100" text="check answer"
                            onMouseClicked="#checkingTheAnswer"/>
                    <Button fx:id="nextQuestionButton" prefWidth="100" text="go to next"
                            onMouseClicked="#goToTheNextQuestion"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 2;">
            <Label fx:id="resultLabel" textFill="#663399">
                <font>
                    <Font name="Verdana" size="20"/>
                </font>
            </Label>
        </VBox>
    </bottom>

    <left>
        <VBox alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 2;" prefWidth="100" spacing="100">
            <VBox spacing="5">
                <Label wrapText="true" text="Check the correct and wrong answers you chose" textAlignment="CENTER"
                       textFill="#663399">
                    <font>
                        <Font name="Verdana" size="10"/>
                    </font>
                </Label>

                <Accordion>
                    <panes>
                        <TitledPane text="wrong answers">
                            <Button text="go" maxWidth="Infinity"/>
                        </TitledPane>
                        <TitledPane text="good answers">
                            <Button text="go" maxWidth="Infinity"/>
                        </TitledPane>
                    </panes>
                </Accordion>

            </VBox>
            <VBox spacing="5">
                <Label textAlignment="CENTER" text="Notes to the question" wrapText="true" textFill="#663399">

                    <font>
                        <Font name="Verdana" size="10"/>
                    </font>
                </Label>

                <TextField maxHeight="300"/>
            </VBox>
        </VBox>
    </left>

    <right>
        <VBox alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 2;" prefWidth="100" spacing="5">
            <Label text="Rate how hard was the question" textAlignment="CENTER" textFill="#663399" wrapText="true">
                <font>
                    <Font name="Verdana" size="10"/>
                </font>
            </Label>
            <ComboBox promptText="level">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Hard"/>
                        <String fx:value="Medium"/>
                        <String fx:value="Easy"/>
                    </FXCollections>
                </items>
            </ComboBox>

        </VBox>
    </right>


</BorderPane>